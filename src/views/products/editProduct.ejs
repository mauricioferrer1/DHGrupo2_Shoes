<!DOCTYPE html>
<html lang="en">
<head>
	    
		<%- include('../partials/head') %>
	
		<link rel="stylesheet" href="/css/detalleproducto.css">
		<title>The Shoes Company</title>
	
	
</head>
<body>
	<%- include('../partials/header') %>

    <div class="formulario">
			<div class="titulo">
				<h1 > <em> Edicion de Productos </em> </h1>
			</div>
			<div class="errores">
				<ul>
					
				</ul>
			</div>
		<div>
			<form class = "camposLogin" name="productForm" action="/product/<%= product.id %>/saveproduct?_method=PUT" method="POST" enctype="multipart/form-data">
				<div class>
					<div>
						<label for="name" class="">Nombre del producto:</label>
						<input type="text" id="name" name="name" value="<%=product.name%>">
					</div>
					<div id="errorNombre"></div>
					<div >
						<label>Descipción:</label>
						<input type="text" size="100" id="description"  name="description" value="<%=product.description%>">
					</div>
					<div id="errorDescripcion"></div>
					<div>
						<label for="img">Imagen Principal de Producto:</label>
						<input type="file" name="img" accept=".jpg" id="img">
					</div>
					<div id="errorImagen"></div>
					<div>
						<label for="img">Imagen 1 de Producto:</label>
						<input type="file" name="img" accept=".jpg" id="img">
					</div>
					<div id="errorImagen1"></div>
					<div>
						<label for="img">Imagen 2 de Producto:</label>
						<input type="file" name="img" accept=".jpg" id="img">
					</div>
					<div id="errorImagen2"></div>
					<div>
						<label for="img">Imagen 3 de Producto:</label>
						<input type="file" name="img" accept=".jpg" id="img">
					</div>
					<div id="errorImagen3"></div>
					
					<div>
						<label for="size">Talle:</label>
						<select name="size" id="size" class="form-input">
							<option value="">Elegí</option>
							<<% for( let i = 0; i <  talle.length; i++) { %>
								<option value= "<%= talle[i].size %>"><%= talle[i].size %></option>
							<% } %>
						</select>
					</div>
					<div id="errorTalle"></div>
					<div>
						<label for="color">Color:</label>
						<select name="color" id="color" class="form-input">
							<option value="">Elegí</option>
							<<% for( let i = 0; i < color.length; i++) { %>
								<option value= "<%= color[i].color %>"><%= color[i].color %></option>
							<% } %>
						</select>
					</div>
					<div id="errorColor"></div>
					<div>
						<label for="price" class="form-label">Precio del producto:</label>
						<input type="text" id="precio" name="precio" value="<%=product.price%>">
					</div>
					<div id="errorPrecio"></div>
					<div>
						<label for="category" class="form-label">Categoría:</label>
						<select name="category" id="category" class="form-input">
							<option value="">Elegí</option>
							<% for( let i = 0; i< category.length; i++ ) { %>
								<option value= "<%= category[i].category %>"><%= category[i].category %></option>
							<% } %>
						</select>
					</div>
					<div id="errorCategoria"></div>
					<div >
						<label>Stock:</label>
						<input type="text" id="description" name="stock" value="<%= product.stock %> " >
					</div>
					<div id="errorStock"></div>
					<div>
						<label for="sale" class="form-label">Sale Status:</label>
						<select name="sale" id="sale" class="form-input">
							<option value="">Elegí</option>
							<option value="on-sale">On-Sale</option>
							<option value="last-month">Last-Month</option>
						</select>
					</div>
					
					<div>
					<button type="submit" class="submit">Guardar producto</button>
					</form>	
					
						<form action="/eliminar/<%= product.id %>/process?_method=DELETE" method="POST">
								<button type="submit"> Borrar producto</button>
						</form>
					</div>
				</div>
			
		</div>

	</div>
	<script src="/js/validacionCrearEdit.js"></script>
	<%- include('../partials/footer') %>



	<script src="/js/validacionCrearEdit.js"></script>
</body>
</html>