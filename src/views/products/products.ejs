<!DOCTYPE html>
<html lang="es">
<head>
    
    <%- include('../partials/head') %>

    <link rel="stylesheet" href="/css/productList.css">
    <title>The Shoes Company</title>

</head>
<body>

 <%- include('../partials/header') %>

<main>
    <div><a href="/products/createproduct"><button>Create Product</button> </a> </div>
    <% if (products.length>0) { %>
        <% products.forEach (function(product){ %>
                <div class="col-12 col-sm-6 col-lg-3">
                <section class="product-box">
                    <a href="/detail/<%= product.id %>">
                        <figure class="product-box_image">
                            <img src="/images/products/<%= product.image %>" alt="imagen de producto">
                        </figure>
                        <article class="product-box_data">
                            <p><%= product.name %></p>
                            <p>$ <%= product.price %></p>
                            <i class="fas fa-search-plus"></i>
                        </article>
                    </a>
                </section>
            </div>
        <% }) %>      
    <% } else if( products.length<1){ %>
        <div class="search-msg">
            <h3>No hay resultados de la b√∫squeda realizada</h3>
        </div>
    <% } %>
       <% console.log(products.length<1) %> 
          
</main>

<%- include('../partials/footer') %>

</body>
</html>